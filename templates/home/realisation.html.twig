{% block title %}{% endblock %}

{% block body %}
    <!-- Testimonial Start -->
    <div class="container-fluid bg-light py-6 px-5">
        <div class="text-center mx-auto mb-5" style="max-width: 600px;">
            <h1 class="display-5 text-uppercase mb-4">What Our <span class="text-primary">Happy Cleints</span> Say!!!</h1>
        </div>
        <div class="row gx-0 align-items-center">
        {% for peinture in peintures %}
            <div class="col-xl-4 col-lg-5 d-none d-lg-block">
                <img class="img-fluid w-100 h-100" src="img/testimonial.jpg">
            </div>
            <div class="col-xl-8 col-lg-7 col-md-12">
                <div class="testimonial bg-light">
                    <div class="row gx-4 align-items-center">
                        <div class="col-xl-4 col-lg-5 col-md-5">
                            <img class="img-fluid w-100 h-100 bg-light p-lg-3 mb-4 mb-md-0" src="{{ peinture.file}}" alt="">
                        </div>
                        <div class="col-xl-8 col-lg-7 col-md-7">
                            <h4 class="text-uppercase mb-0">{{ peinture.nom}}</h4>
                            <p>Profession</p>
                            <p class="fs-5 mb-0"><i class="fa fa-2x fa-quote-left text-primary me-2"></i>
                                {{ peinture.description|u.truncate(200, '...', false)}}
                            </p>
                            <div class="d-flex align-items-center">
                                <span class="ms-3"><i class="far fa-calendar-alt text-primary me-2"></i>
                                {{peinture.createAt|date('d/m/Y')}}</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
        </div>
    </div>
    <!-- Testimonial End -->
    
{% endblock %}

