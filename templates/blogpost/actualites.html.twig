{% extends 'base.html.twig' %}

{% block title %}Hello BlogpostController!{% endblock %}

{% block body %}
<div class="container-fluid bg-light py-6 px-5">
        <div class="text-center mx-auto mb-5" style="max-width: 600px;">
            <h1 class="display-5 text-uppercase mb-4">Deniere <span class="text-primary">Actualité</span> Blogpost</h1>
        </div>
        <div class="row d-flex justify-content-center align-content-center">
        {% for blogpost in blogposts %}
            <div class="col-12 col-md-4 d-flex justify-content-center align-content-center">
                <div class="card shadow-light-lg my-2" style="width: 18rem;">
                    <div class="card-body">
                        <h3>
                            {{ blogpost.titre}}
                        </h3>
                        <h5 class="card-title">
                        </h5>
                        <p class="card-text">
                            {{ blogpost.contenu|u.truncate(400, '...', false)}}
                        </p>
                        <a href="#" class="card-meta mt-auto">
                            <hr class="card-meta-divider">
                            <p class="h6 text-uppercase text-muted mb-0 ms-auto">
                                <time>Ajoutée le {{ blogpost.createAt|date('d/m/Y')}}</time>
                            </p> 
                        </a>
                    </div>
                </div>
            </div>
        {% endfor %}
        </div>
        <div class="d-flex justify-content-center">
            {% do blogposts.setPageRange(2) %}
            {{ knp_pagination_render(blogposts, 'base/pagination.html.twig')}}

        </div>
    </div>
{% endblock %}
